<li id="">
  <% @post.comments.each do |comment| %>
  <span class="user">
    <%= link_to gravatar_for(comment.user), comment.user %>
    <%= comment.user.username %>
  </span>
  <span class="title">
    <p><%= comment.message %></p>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(comment.created_at) %> ago.
  </span>
  <% end %>
</li>