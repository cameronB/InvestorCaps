<% @user ||= current_user %>
<div class="stats">
  <a href="<%= c_following_user_path(@user) %>">
    <strong id="company-following" class="stat">
      Following
      <%= @user.c_followed_companies.count %>
      Companies
    </strong>
  </a>
  <a href="<%= s_following_user_path(@user) %>">
    <strong id="shareholder_following" class="stat">
    Following
      <%= @user.s_followed_users.count %>
    Shareholders
    </strong>
  </a>
  <a href="<%= s_followers_user_path(@user) %>">
    <strong id="shareholder_followers" class="stat">
    Followed By
      <%= @user.s_followers.count %>
    Shareholders
    </strong>
  </a>
</div>