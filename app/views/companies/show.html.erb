<% provide(:title, @company.symbol) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= render 'users/follow_company_form' if signed_in? %>
        <%= @company.name %>
      </h1>
    </section>
    <section>
      <%= render 'shared/company_stats' %>
    </section>
  </aside>
  <div class="span8">
    <% if @posts.any? %>
      <h3>Threads</h3>
       <ol class="posts">
        <%= render @posts %>
      </ol>
      <%= will_paginate @posts %>
    <% end %>
  </div>
</div>